= form_for(@wish) do |f|
  - if @wish.errors.any?
    #error_explanation
      %h2
        = pluralize(@wish.errors.count, "error")
        prohibited this wish from being saved:
      %ul
        - @wish.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :description
    %br/
    = f.text_field :description
  .field
    = f.label :priority
    %br/
    = f.number_field :priority
  .field
    = f.label :arrival
    %br/
    = f.date_select :arrival
  .field
    = f.label :status_id
    %br/
    = f.number_field :status_id
  .field
    = f.label :category_id
    %br/
    = f.number_field :category_id
  .field
    = f.label :user_id
    %br/
    = f.number_field :user_id
  .actions
    = f.submit
