= form_for(@wish) do |f|
  - if @wish.errors.any?
    #error_explanation
      %h2
        = pluralize(@wish.errors.count, "error")
        prohibited this wish from being saved:
      %ul
        - @wish.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :description
    %br/
    = f.text_field :description
  .field
    = f.label :priority
    %br/
    = f.number_field :priority
  .field
    = f.label :arrival
    %br/
    = f.date_select :arrival
  .field
    = f.label :status_id
    %br/
    = f.collection_select :status_id, @statuses, :id, :description, :prompt => true
  .field
    = f.label :category_id
    %br/
    = f.collection_select :category_id, @categories, :id, :description, :prompt => true
  .field
    = f.label :device_id
    %br/
    = f.collection_select :device_id, @devices, :id, :description, :prompt => true
  .actions
    = f.submit
